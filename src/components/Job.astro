---
export interface Props {
	employer: string;
	title: string;
	location: string;
	dateStart: string; // MM/YYYY
	points?: string[];
	dateEnd?: string;
}

const { title, employer, points, dateStart, dateEnd, location } = Astro.props;
---

<article>
	<h4><span>{employer}</span> — {title}</h4>
	<div>{dateStart} - {dateEnd ? dateEnd : "Present"} · {location}</div>
	{points && <ul>{points.map((p: string) => <li>{p}</li>)}</ul>}
</article>

<style>
	@layer components {
		article {
			margin-bottom: 28px;
			opacity: 0;
			animation: var(--fadeUp);
		}
		h4 {
			font-family: var(--font-family-serif);
			font-size: 1.05rem;
			font-weight: 700;
		}
		h4 span {
			color: var(--accent);
		}
		div {
			font-family: var(--font-family-mono);
			font-size: 0.86rem;
			color: var(--muted);
			letter-spacing: 0.06em;
		}
		li {
			font-size: 0.86rem;
			line-height: 1.7;
			color: var(--ink);
			padding-left: 0;
			position: relative;
			margin-bottom: 4px;
		}
		li::marker {
			color: var(--accent);
			content: "— ";
		}
	}
</style>
