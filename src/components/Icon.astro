---
export interface Props {
	name: string;
}

const { name } = Astro.props;
---
<kay-icon aria-hidden="true">
  <img src=`/assets/${name}.svg` alt="" />
</kay-icon>
<style>
kay-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}
img {
  inline-size: 1.25rem;
  block-size: 1.25rem;
  filter: invert(1);
  -webkit-filter: invert(1);
  -moz-filter: invert(1);
}
</style>