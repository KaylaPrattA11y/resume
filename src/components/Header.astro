<style>
  @layer components {
    .site-header {
      container: site-header / inline-size;
      padding-block-end: 28px;
      border-block-end: 2.5px solid var(--ink);
      margin-block-end: 36px;
      animation: var(--fadeUp);
    }
    .site-header > div {
      display: grid;
      gap: 0.5rem;
      @container site-header (width >= 600px) {
        grid-template-columns: 1fr auto;
        align-items: end;
      }
    }
    :where(h1,h2) {
      margin: 0;
    }
    h1 {
      margin: 0;
      font-family: var(--font-family-serif);
      font-weight: 900;
      font-size: clamp(2.6rem, 6vw, 4.2rem);
      line-height: 1;
      letter-spacing: -0.02em;
    }
    h1 > div {
      color: var(--accent);
    }
    :where(h2, .site-contact) {
      font-family: var(--font-family-mono);
      font-size: 0.72rem;
      font-weight: 400;
      letter-spacing: 0.12em;
    }
    h2 {
      text-transform: uppercase;
      color: var(--muted);
      margin-block-start: 10px;
    }
    .site-contact {
      line-height: 1.9;
      color: var(--muted);
      @container site-header (width >= 600px) {
        text-align: right;
      }
    }
  }
</style>